                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp" />
                <TextView
                    android:id="@+id/abs5_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opis vježbe 5"

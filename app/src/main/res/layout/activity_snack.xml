<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SnackActivity">

    <LinearLayout
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <!-- Recept 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Slika -->
                <ImageView
                    android:id="@+id/image_recept1111"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sna1"
                    android:scaleType="centerCrop" />

                <!-- Opis recepta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Naziv recepta -->
                    <TextView
                        android:id="@+id/naziv_recept1111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grčki jogurt s voćem"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <!-- Opis recepta -->
                    <TextView
                        android:id="@+id/opis_recepta111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sastojci:
\n - Grčki jogurt (prirodni ili s okusom vanilije)
\n - Svježe sezonsko voće po izboru (npr. jagode, borovnice, maline, banane, kivi, breskve)
\n - Med ili agavin sirup za slatkoću (opcionalno)
\n - Granola ili orašasti plodovi (za dodatnu hrskavost, opcionalno)"
                        android:textSize="14sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Recept 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Slika -->
                <ImageView
                    android:id="@+id/image_recept3333"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sna3"
                    android:scaleType="centerCrop" />

                <!-- Opis recepta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Naziv recepta -->
                    <TextView
                        android:id="@+id/naziv_recept3333"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voćna salata"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <!-- Opis recepta -->
                    <TextView
                        android:id="@+id/opis_recepta3333"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sastojci:
\n - Raznovrsno svježe voće po izboru (npr. jagode, grožđice, ananas, kivi, mango, naranče, jabuke, banane, breskve, dinja, lubenica)
\n - Sok od limuna ili limete (za prevenciju oksidacije voća)
\n - Med, agavin sirup ili javorov sirup"

                        android:textSize="14sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Slika -->
                <ImageView
                    android:id="@+id/image_recept2222"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sna2"
                    android:scaleType="centerCrop" />

                <!-- Opis recepta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Naziv recepta -->
                    <TextView
                        android:id="@+id/naziv_recept2222"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Palačinke od banana"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="16dp" />

                    <!-- Opis recepta -->
                    <TextView
                        android:id="@+id/opis_recepta2222"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sastojci:
\n - 1 zrela banana, zgnječena
\n - 1 šalica (oko 120 g) glatkog brašna
\n - 1 žlica šećera (po želji)
\n - 1 žličica praška za pecivo
\n - Prstohvat soli
\n - 1 jaje
\n - 3/4 šalice mlijeka
\n - 1 žlica rastopljenog maslaca ili ulja"
                        android:textSize="14sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
